<% url = spree.product_path(product, taxon_id: @taxon.try(:id)) %>
 

<div id="product_<%= product.id %>" class="col-md-4 top-grid text-center" data-hook="products_list_item" itemscope itemtype="https://schema.org/Product">
  <% cache(@taxon.present? ? [I18n.locale, current_currency, @taxon, product] : [I18n.locale, current_currency, product]) do %>
    <div class="top-grid-pic">
      <%#= image_tag('/assets/spree/frontend/pic01.png') %>
      <%= product_image(product, itemprop: "image") %><br>
      <%= content_tag(:span, truncate(product.name, length: 25), itemprop: "name", title: product.name) %>
    </div>
    <div class="top-grid-pic-info">
      <%= link_to "Buy",url,itemprop: 'url' %>
    </div>
  <% end %>
</div>